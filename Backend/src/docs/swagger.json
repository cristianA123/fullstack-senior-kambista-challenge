    "exchangeRate": {
      "get": {
        "tags": [
          "ExchangeRate"
        ],
        "summary": "Obtener el tipo de cambio de una moneda",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "example": 1
            },
            "description": "Page number"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "example": 5
            },
            "description": "Number of clients per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Tipo de cambio obtenido con exito",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "boolean"
                        },
                        "limit": {
                          "type": "string"
                        },
                        "total": {
                          "type": "string"
                        },
                        "next": {
                          "type": "string"
                        },
                        "prev": {
                          "type": "string"
                        },
                        "exchangeRates": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "monedaOrigen": {
                                "type": "string"
                              },
                              "monedaDestino": {
                                "type": "string"
                              },
                              "monto": {
                                "type": "number"
                              },
                              "montoCambiado": {
                                "type": "number"
                              },
                              "tipoCambio": {
                                "type": "number"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalErrorResponse"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      },
